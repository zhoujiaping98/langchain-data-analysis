# --- MySQL ---
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=YOUR_USER
MYSQL_PASSWORD=YOUR_PASSWORD
MYSQL_DATABASE=YOUR_DB

# --- LLM (OpenAI-compatible) ---
# Example: https://api.openai.com/v1 or your self-hosted compatible gateway
LLM_BASE_URL=
LLM_API_KEY=
LLM_MODEL=gpt-4o-mini

# --- Embeddings (OpenAI-compatible) ---
EMBED_BASE_URL=
EMBED_API_KEY=
EMBED_MODEL=text-embedding-3-small

# --- App ---
APP_ENV=dev
APP_PORT=8000
CHROMA_DIR=.chroma

# --- Router thresholds ---
ROUTER_CONF_RULE=0.90
ROUTER_CONF_RAG=0.80
ROUTER_CONF_ASK=0.60

# --- Safety limits ---
MAX_ROWS=10000
MAX_REPAIR_ROUNDS=2

# --- Risk rules (comma-separated lists) ---
RISK_BLOCK_KEYWORDS=drop,truncate,delete,update,insert,alter,create
RISK_BLOCK_KEYWORDS_ZH=删除,清空,改表,建表,更新
RISK_SENSITIVE_COLUMNS=salary,phone,id_card,email,address
RISK_RESTRICTED_KEYWORDS=财务,薪资,salary,revenue
RISK_RESTRICTED_ROLES=intern,guest
RISK_REQUIRE_LIMIT=true
RISK_MAX_QUERY_LENGTH=8000
RISK_MAX_TABLES=8
RISK_MAX_JOINS=6
RISK_MAX_SUBQUERIES=4
RISK_MAX_UNIONS=2
RISK_BLOCK_CROSS_JOIN=true
RISK_BLOCK_MULTIPLE_STATEMENTS=true
